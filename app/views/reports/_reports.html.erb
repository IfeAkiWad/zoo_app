<table>
  <thead>
    <tr>
      
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% reports.each do |report| %>
      
        Report submitted by:
        <%= report.user.username %>
        <br>
        Report submitted on: 
        <%= report.animal.name %>
        <br>
        Topic: 
        <%= report.topic %>
        <br>
        Observations: 
        <%= report.observations %>
        <br>
        <%= link_to 'Edit Post', edit_user_report_path(user, report) %>
        <br>
        <%= link_to 'Destroy Post', [user, report], method: :delete, data: { confirm: 'Are you sure?' } %>
      
    <% end %>
  </tbody>
</table>