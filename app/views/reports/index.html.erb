<p id="notice"><%= notice %></p>

<h1>Reports submitted by:  <%= current_user.username %></h1>

<br>
<table>
  <thead>
    <tr>
      
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.animal.name %></td>
        <td><%= report.topic %></td>
        <td><%= report.observations %></td>
        <td><%= link_to 'Back to User Account', [@user] %></td>
        <td><%= link_to 'Edit Post', edit_user_report_path(@user, report) %></td>
        <td><%= link_to 'Destroy Post', [@user, report], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Report', new_user_report_path(@user) %>